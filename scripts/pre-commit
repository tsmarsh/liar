#!/bin/bash
# Pre-commit hook for liar2
# Runs fmt check, clippy, and tests before allowing commit

set -e

echo "Running pre-commit checks..."

# Check formatting
echo "Checking formatting..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "Formatting check failed. Run 'cargo fmt' to fix."
    exit 1
fi
echo "Formatting OK"

# Run clippy
echo "Running clippy..."
cargo clippy --all-targets --all-features -- -D warnings
if [ $? -ne 0 ]; then
    echo "Clippy found issues."
    exit 1
fi
echo "Clippy OK"

# Run unit tests
echo "Running unit tests..."
cargo test --workspace
if [ $? -ne 0 ]; then
    echo "Unit tests failed."
    exit 1
fi
echo "Unit tests OK"

# Run lIR certification tests
echo "Running lIR certification tests..."
cargo test -p lir-cli --test cert
if [ $? -ne 0 ]; then
    echo "lIR certification tests failed."
    exit 1
fi
echo "lIR certification tests OK"

# Run liar behavior tests
echo "Running liar behavior tests..."
cargo test -p liar-cert --test cert
if [ $? -ne 0 ]; then
    echo "liar behavior tests failed."
    exit 1
fi
echo "liar behavior tests OK"

# Run liar specification tests
echo "Running liar specification tests..."
cargo test -p liar-spec --test spec
if [ $? -ne 0 ]; then
    echo "liar specification tests failed."
    exit 1
fi
echo "liar specification tests OK"

echo "All pre-commit checks passed!"
